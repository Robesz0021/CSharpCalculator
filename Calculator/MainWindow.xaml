<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Calculator" Height="550" Width="320"
        MinHeight="400" MinWidth="250"
        Background="#1E1E1E">
    <Window.Resources>
        <Style x:Key="NumberButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OperatorButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#FF9500" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="DisplayArea"
                   Text="0"
                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right"
                   Margin="10"
                   FontSize="48"
                   Foreground="#FFFFFF"
                   TextTrimming="CharacterEllipsis"
                   FontFamily="Segoe UI"/>

        <!-- Backspace button (small, top-right) -->
        <Button Content="⌫"
                Grid.Row="0" Grid.Column="3"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10"
                Width="40" Height="36"
                Style="{StaticResource OperatorButtonStyle}"
                Background="#404040"
                Click="BackspaceButton_Click"/>

        <Button Content="C" Grid.Row="1" Grid.Column="0" Style="{StaticResource OperatorButtonStyle}" Background="#404040" Click="ClearButton_Click"/>
        <Button Content="CE" Grid.Row="1" Grid.Column="1" Style="{StaticResource OperatorButtonStyle}" Background="#404040" Click="ClearEntryButton_Click"/>
        <Button Content="%" Grid.Row="1" Grid.Column="2" Style="{StaticResource OperatorButtonStyle}" Background="#404040" Click="PercentButton_Click"/>
        <Button Content="/" Grid.Row="1" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Background="#FF9500" Click="OperatorButton_Click"/>

        <Button Content="7" Grid.Row="2" Grid.Column="0" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="8" Grid.Row="2" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="9" Grid.Row="2" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="*" Grid.Row="2" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Background="#FF9500" Click="OperatorButton_Click"/>

        <Button Content="4" Grid.Row="3" Grid.Column="0" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="5" Grid.Row="3" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="6" Grid.Row="3" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="-" Grid.Row="3" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Background="#FF9500" Click="OperatorButton_Click"/>

        <Button Content="1" Grid.Row="4" Grid.Column="0" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="2" Grid.Row="4" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="3" Grid.Row="4" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="+" Grid.Row="4" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Background="#FF9500" Click="OperatorButton_Click"/>

        <Button Content="0" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource NumberButtonStyle}" HorizontalAlignment="Stretch" Click="NumberButton_Click"/>
        <Button Content="." Grid.Row="5" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" Click="NumberButton_Click"/>
        <Button Content="=" Grid.Row="5" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Background="#2E86C1" Foreground="#FFFFFF" Click="EqualsButton_Click"/>
    </Grid>
</Window>